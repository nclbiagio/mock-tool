{
   "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "resolveJsonModule": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
         "*": ["node_modules/*"]
      }
   },
   "exclude": ["node_modules", ".vscode"],
   "include": [  
      // if you have a mixed JS/TS codebase, don't forget to include your JS files
      "*"
    ]
}
